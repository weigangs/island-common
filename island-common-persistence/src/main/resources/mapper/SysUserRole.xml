<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lkyl.island.common.ps.dao.SysUserRoleDao">

    <resultMap type="com.lkyl.island.common.ps.entity.SysUserRole" id="SysUserRoleMap">
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="get" resultMap="SysUserRoleMap">
        select
          user_id, role_id
        from sys_user_role
        where user_id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="getByParam" resultMap="SysUserRoleMap">
        select
          user_id, role_id
        from sys_user_role
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
        </where>
    </select>

	    <!--查询列表据-->
    <select id="list" resultMap="SysUserRoleMap">
        select
          user_id, role_id
        from sys_user_role
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
        </where>
    </select>

    <!--统计总行数-->
    <select id="count" resultType="int">
        select count(1)
        from sys_user_role
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="save" >
        insert into sys_user_role(user_id, role_id)
        values (#{userId}, #{roleId})
    </insert>

    <insert id="batchSave">
        insert into sys_user_role(user_id, role_id)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.userId}, #{entity.roleId})
        </foreach>
    </insert>

    <insert id="saveOrUpdateBatch">
        insert into sys_user_role(user_id, role_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}, #{entity.roleId})
        </foreach>
        on duplicate key update
        user_id = values(user_id),
        role_id = values(role_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="updateById">
        update sys_user_role
        <set>
        </set>
        where user_id = #{userId}
    </update>

    <!--通过主键修改数据-->
    <update id="updateOnWhere">
        update sys_user_role
        <set>
        </set>
                <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
        </where>
    </update>

    <!--通过主键删除-->
    <delete id="remove">
        delete from sys_user_role where user_id = #{userId}
    </delete>

	<!--通过where删除-->
    <delete id="removeOnWhere">
        delete from sys_user_role
		                <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
        </where>
    </delete>
	<!-- 通过ID批量删除 -->
	    <delete id="batchRemoveById">
        DELETE FROM sys_user_role
        where user_id in
		        <foreach item="id" collection="array" open="(" separator="," close=")">
#{id}        </foreach>
    </delete>

</mapper>

