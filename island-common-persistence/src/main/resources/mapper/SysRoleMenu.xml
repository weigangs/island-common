<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lkyl.island.common.ps.dao.SysRoleMenuDao">

    <resultMap type="com.lkyl.island.common.ps.entity.SysRoleMenu" id="SysRoleMenuMap">
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="menuId" column="menu_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="get" resultMap="SysRoleMenuMap">
        select
          role_id, menu_id
        from sys_role_menu
        where role_id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="getByParam" resultMap="SysRoleMenuMap">
        select
          role_id, menu_id
        from sys_role_menu
        <where>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
        </where>
    </select>

	    <!--查询列表据-->
    <select id="list" resultMap="SysRoleMenuMap">
        select
          role_id, menu_id
        from sys_role_menu
        <where>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
        </where>
    </select>

    <!--统计总行数-->
    <select id="count" resultType="int">
        select count(1)
        from sys_role_menu
        <where>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="save" >
        insert into sys_role_menu(role_id, menu_id)
        values (#{roleId}, #{menuId})
    </insert>

    <insert id="batchSave">
        insert into sys_role_menu(role_id, menu_id)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.roleId}, #{entity.menuId})
        </foreach>
    </insert>

    <insert id="saveOrUpdateBatch">
        insert into sys_role_menu(role_id, menu_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.roleId}, #{entity.menuId})
        </foreach>
        on duplicate key update
        role_id = values(role_id),
        menu_id = values(menu_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="updateById">
        update sys_role_menu
        <set>
        </set>
        where role_id = #{roleId}
    </update>

    <!--通过主键修改数据-->
    <update id="updateOnWhere">
        update sys_role_menu
        <set>
        </set>
                <where>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
        </where>
    </update>

    <!--通过主键删除-->
    <delete id="remove">
        delete from sys_role_menu where role_id = #{roleId}
    </delete>

	<!--通过where删除-->
    <delete id="removeOnWhere">
        delete from sys_role_menu
		                <where>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
        </where>
    </delete>
	<!-- 通过ID批量删除 -->
	    <delete id="batchRemoveById">
        DELETE FROM sys_role_menu
        where role_id in
		        <foreach item="id" collection="array" open="(" separator="," close=")">
#{id}        </foreach>
    </delete>

</mapper>

